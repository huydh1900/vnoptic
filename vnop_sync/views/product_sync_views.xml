<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_sync_search" model="ir.ui.view">
        <field name="name">product.sync.search</field>
        <field name="model">product.sync</field>
        <field name="arch" type="xml">
            <search string="Tìm kiếm đồng bộ">
                <field name="name"/>
                <separator/>
                <filter name="filter_success" string="Thành công" domain="[('sync_status', '=', 'success')]"/>
                <filter name="filter_error" string="Lỗi" domain="[('sync_status', '=', 'error')]"/>
                <filter name="filter_never" string="Chưa đồng bộ" domain="[('sync_status', '=', 'never')]"/>
                <separator/>
                <group expand="0" string="Nhóm theo">
                    <filter name="group_by_status" string="Trạng thái" context="{'group_by': 'sync_status'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_product_sync_tree" model="ir.ui.view">
        <field name="name">product.sync.tree</field>
        <field name="model">product.sync</field>
        <field name="arch" type="xml">
            <list string="Đồng bộ sản phẩm">
                <field name="name"/>
                <field name="last_sync_date"/>
                <field name="total_synced"/>
                <field name="lens_count" optional="hide"/>
                <field name="opts_count" optional="hide"/>
                <field name="other_count" optional="hide"/>
                <field name="sync_status" widget="badge"
                       decoration-success="sync_status == 'success'"
                       decoration-danger="sync_status == 'error'"
                       decoration-muted="sync_status == 'never'"/>
            </list>
        </field>
    </record>

    <record id="view_product_sync_form" model="ir.ui.view">
        <field name="name">product.sync.form</field>
        <field name="model">product.sync</field>
        <field name="arch" type="xml">
            <form string="Đồng bộ sản phẩm">
                <header>
                    <button name="sync_products_from_springboot"
                            string="Đồng bộ toàn bộ"
                            type="object"
                            class="oe_highlight"
                            invisible="id == False"
                            confirm="Sync toàn bộ sản phẩm? Có thể mất nhiều thời gian."/>
                    <button name="sync_products_limited"
                            string="Đồng bộ 200 Test"
                            type="object"
                            invisible="id == False"/>
                    <button name="test_api_connection"
                            string="Kiểm tra kết nối"
                            type="object"
                            invisible="id == False"/>
                    <field name="sync_status" widget="statusbar" statusbar_visible="never,success,error"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Cấu hình đồng bộ"/>
                        <h1>
                            <field name="name" placeholder="vd: Đồng bộ hàng ngày"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Thống kê">
                            <field name="last_sync_date" readonly="1"/>
                            <field name="total_synced" readonly="1"/>
                            <field name="total_failed" readonly="1"/>
                        </group>
                        <group string="Số lượng">
                            <field name="lens_count" readonly="1"/>
                            <field name="opts_count" readonly="1"/>
                            <field name="other_count" readonly="1"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Nhật ký" name="sync_log">
                            <field name="sync_log" widget="text" placeholder="Nhật ký sẽ hiển thị ở đây..."/>
                        </page>
                        <page string="Thông tin" name="info">
                            <group>
                                <div class="alert alert-info" role="alert">
                                    <h4>Hướng dẫn:</h4>
                                    <ol>
                                        <li>Nhập Spring Boot <strong>username</strong> và
                                            <strong>password</strong>
                                        </li>
                                        <li>Nhấn <strong>"Kiểm tra kết nối"</strong> để xác thực
                                        </li>
                                        <li>Nhấn <strong>"Đồng bộ toàn bộ"</strong> để bắt đầu
                                        </li>
                                        <li>Sản phẩm sẽ được phân loại tự động:
                                            <ul>
                                                <li>
                                                    <strong>Mắt</strong>
                                                    
                                                </li>
                                                <li>
                                                    <strong>Gọng</strong>
                                                  
                                                </li>
                                                <li>
                                                    <strong>Khác</strong>
                                                   
                                                </li>
                                            </ul>
                                        </li>
                                    </ol>
                                    <hr/>

                                    <p>
                                        <strong>Xác thực:</strong>
                                        JWT Bearer Token (auto-login)
                                    </p>
                                </div>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ==================== ACTION ==================== -->
    <record id="action_product_sync" model="ir.actions.act_window">
        <field name="name">Product Synchronization</field>
        <field name="res_model">product.sync</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_product_sync_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo cấu hình đồng bộ đầu tiên!
            </p>
            <p>
                Đồng bộ tất cả sản phẩm từ Spring Boot API với phân loại tự động.
            </p>
        </field>
    </record>

    <menuitem id="menu_product_sync_root"
              name="Đồng bộ sản phẩm"
              sequence="50"/>

    <menuitem id="menu_product_sync_sync"
              name="Đồng bộ hóa"
              parent="menu_product_sync_root"
              sequence="10"/>

    <menuitem id="menu_product_sync_config"
              name="Cấu hình"
              parent="menu_product_sync_sync"
              action="action_product_sync"
              sequence="10"/>

    <menuitem id="menu_product_master_data"
              name="Dữ liệu gốc"
              parent="menu_product_sync_root"
              sequence="20"/>
    
    <!-- Configuration submenu -->
    <menuitem id="menu_product_config"
              name="Cấu hình"
              parent="menu_product_master_data"
              sequence="100"/>

</odoo>
