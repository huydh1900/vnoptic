<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Group Tree View -->
    <record id="view_product_group_tree" model="ir.ui.view">
        <field name="name">product.group.tree</field>
        <field name="model">product.group</field>
        <field name="arch" type="xml">
            <list string="Nhóm sản phẩm">
                <field name="cid"/>
                <field name="name"/>
                <field name="product_type" widget="badge" 
                       decoration-info="product_type == 'lens'"
                       decoration-success="product_type == 'opt'"
                       decoration-warning="product_type == 'accessory'"/>
                <field name="group_type_id"/>
                <field name="activated"/>
            </list>
        </field>
    </record>

    <!-- Product Group Form View -->
    <record id="view_product_group_form" model="ir.ui.view">
        <field name="name">product.group.form</field>
        <field name="model">product.group</field>
        <field name="arch" type="xml">
            <form string="Nhóm sản phẩm">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="cid"/>
                            <field name="product_type" widget="radio" options="{'horizontal': true}"/>
                        </group>
                        <group>
                            <field name="group_type_id"/>
                            <field name="activated"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Product Group Action -->
    <record id="action_product_group" model="ir.actions.act_window">
        <field name="name">Nhóm sản phẩm</field>
        <field name="res_model">product.group</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo nhóm sản phẩm đầu tiên
            </p>
            <p>
                Nhóm sản phẩm được dùng để phân loại và tạo mã sản phẩm.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_product_group"
              name="Nhóm sản phẩm"
              parent="vnop_sync.menu_product_config"
              action="action_product_group"
              sequence="10"/>
</odoo>
