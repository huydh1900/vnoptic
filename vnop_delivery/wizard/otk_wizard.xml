<odoo>
    <record id="view_otk_wizard_form" model="ir.ui.view">
        <field name="name">otk.wizard.form</field>
        <field name="model">otk.wizard</field>
        <field name="arch" type="xml">
            <form string="Kiểm tra chất lượng (OTK)">
                <sheet>
                    <group>
                        <field name="picking_id" readonly="1"/>
                    </group>

                    <separator string="Chi tiết kiểm tra"/>

                    <!-- QUAN TRỌNG: phải bọc tree trong field line_ids -->
                    <field name="line_ids">
                        <list editable="bottom" create="0" delete="0">
                            <field name="product_id" readonly="1" force_save="1"/>
                            <field name="qty_contract" readonly="1" force_save="1"/>
                            <field name="qty_received" class="bg-warning"/>
                            <field name="qty_over"/>
                            <field name="qty_short"/>
                            <field name="qty_ok" class="bg-info"/>
                            <field name="qty_ng" readonly="1" force_save="1"/>
                        </list>
                    </field>

                </sheet>

                <footer>
                    <button name="action_confirm_otk"
                            string="Xác nhận OTK"
                            type="object"
                            class="btn-primary"/>

                    <button string="Huỷ"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
