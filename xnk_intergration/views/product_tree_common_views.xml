<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ========================================== -->
    <!-- PRODUCT TREE VIEW - Common for all types -->
    <!-- Only shows common fields, specific fields in form view -->
    <!-- ========================================== -->
    <record id="product_template_tree_view_xnk" model="ir.ui.view">
        <field name="name">product.template.tree.xnk</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <!-- Add common fields after name -->
            <xpath expr="//field[@name='name']" position="after">
                <field name="product_type" invisible="1"/>
                <field name="default_code" string="Mã SP"/>
                
                <!-- Lens fields - only visible when product_type = 'lens' -->
                <field name="lens_sph" string="SPH" optional="show" invisible="product_type != 'lens'"/>
                <field name="lens_cyl" string="CYL" optional="show" invisible="product_type != 'lens'"/>
                <field name="lens_index_name" string="Index" optional="show" invisible="product_type != 'lens'"/>
                <field name="lens_add" string="Add" optional="show" invisible="product_type != 'lens'"/>
                
                <!-- Opt fields - only visible when product_type = 'opt' -->
                <field name="opt_model" string="Model" optional="show" invisible="product_type != 'opt'"/>
                <field name="opt_color" string="Màu" optional="show" invisible="product_type != 'opt'"/>
                <field name="opt_frame_type" string="Loại gọng" optional="show" invisible="product_type != 'opt'"/>
                <field name="opt_shape" string="Hình dạng" optional="show" invisible="product_type != 'opt'"/>
                
                <!-- Common fields -->
                <field name="brand_id" string="Thương hiệu" optional="show"/>
                <field name="group_id" string="Nhóm SP" optional="show"/>
                <field name="supplier_id" string="NCC" optional="hide"/>
                <field name="country_id" string="Xuất xứ" optional="hide"/>
                
                <!-- Price fields -->
                <field name="list_price" string="Giá bán"/>
                <field name="x_ws_price" string="Giá sỉ" optional="hide"/>
                <field name="x_ct_price" string="Giá vốn" optional="hide"/>
                <field name="status_product_id" string="Trạng thái" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- ========================================== -->
    <!-- PRODUCT SEARCH VIEW - Common filters -->
    <!-- ========================================== -->
    <record id="product_template_search_view_xnk" model="ir.ui.view">
        <field name="name">product.template.search.xnk</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <!-- Add filter for product_type after filter_to_sell -->
            <xpath expr="//filter[@name='filter_to_sell']" position="after">
                <separator/>
                <filter string="Lens" name="filter_lens" domain="[('product_type', '=', 'lens')]"/>
                <filter string="Gọng kính" name="filter_opt" domain="[('product_type', '=', 'opt')]"/>
                <filter string="Phụ kiện" name="filter_accessory" domain="[('product_type', '=', 'accessory')]"/>
            </xpath>
        </field>
    </record>

    <!-- ========================================== -->
    <!-- PRODUCT SEARCH VIEW - For Purchase -->
    <!-- ========================================== -->
    <record id="product_template_search_view_xnk_purchase" model="ir.ui.view">
        <field name="name">product.template.search.xnk.purchase</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <!-- Add filter for product_type after filter_to_purchase -->
            <xpath expr="//filter[@name='filter_to_purchase']" position="after">
                <separator/>
                <filter string="Lens" name="filter_lens" domain="[('product_type', '=', 'lens')]"/>
                <filter string="Gọng kính" name="filter_opt" domain="[('product_type', '=', 'opt')]"/>
                <filter string="Phụ kiện" name="filter_accessory" domain="[('product_type', '=', 'accessory')]"/>
            </xpath>
        </field>
    </record>

    <!-- ========================================== -->
    <!-- PRODUCT SEARCH VIEW - For Stock -->
    <!-- ========================================== -->
    <record id="product_template_search_view_xnk_stock" model="ir.ui.view">
        <field name="name">product.template.search.xnk.stock</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.product_template_search_form_view_stock"/>
        <field name="arch" type="xml">
            <!-- Add filter for product_type after goods -->
            <xpath expr="//filter[@name='goods']" position="after">
                <separator/>
                <filter string="Lens" name="filter_lens" domain="[('product_type', '=', 'lens')]"/>
                <filter string="Gọng kính" name="filter_opt" domain="[('product_type', '=', 'opt')]"/>
                <filter string="Phụ kiện" name="filter_accessory" domain="[('product_type', '=', 'accessory')]"/>
            </xpath>
        </field>
    </record>
</odoo>
