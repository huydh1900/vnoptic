    <record id="vnop_purchase_order_form_inherit" model="ir.ui.view">
        <field name="name">vnop.purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='print_quotation']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='print_quotation' and @invisible=&quot;state != 'sent'&quot;]"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[('supplier_rank','>',0), ('parent_id','=',False)]</attribute>
                <attribute name="options">{'no_create': True}</attribute>
            </xpath>
            <xpath expr="//button[@id='draft_confirm']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_rfq_send' and contains(@context, &quot;'send_rfq':False&quot;)]"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_rfq_send' and @invisible=&quot;state != 'sent'&quot;]"
                   position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='button_cancel']" position='attributes'>
                <attribute name="class">btn-danger</attribute>
                <attribute name="confirm">Bạn có chăc muốn Hủy yêu cầu báo giá này?</attribute>
            </xpath>
            <xpath expr="//form/sheet/group/group[2]/div[@name='reminder']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='action_bill_matching']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="before">
                <field name="approver_id" readonly="state != 'draft'" options="{'no_create': True}"/>
            </xpath>
            <xpath expr="//button[@name='action_bill_matching']" position="before">
                <button name="action_view_delivery_schedule"
                        type="object"
                        string="Lịch giao hàng"
                        invisible="state != 'purchase'"
                        icon="fa-plane">
                    <field name="count_delivery_schedule" widget="statinfo" string="Lịch giao hàng"/>
                </button>
