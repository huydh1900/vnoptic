<odoo>
    <record id="view_import_contract_tree" model="ir.ui.view">
        <field name="name">import.contract.tree</field>
        <field name="model">import.contract</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="etd_date"/>
                <field name="eta_date"/>
                <field name="purchase_count"/>
                <field name="qty_ordered_total"/>
                <field name="qty_received_total"/>
                <field name="qty_remaining_total"/>
            </list>
        </field>
    </record>

    <record id="view_import_contract_form" model="ir.ui.view">
        <field name="name">import.contract.form</field>
        <field name="model">import.contract</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_open_remaining_lines_wizard" type="object" class="btn-primary"
                            string="Nạp phần còn thiếu"/>
                    <button name="action_open_purchases" type="object" string="Đơn mua hàng"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="partner_id"/>
                            <field name="incoterm_id"/>
                        </group>
                        <group>
                            <field name="currency_id"/>
                            <field name="etd_date"/>
                            <field name="eta_date"/>
                        </group>
                    </group>
                    <group>
                        <field name="qty_ordered_total" readonly="1"/>
                        <field name="qty_received_total" readonly="1"/>
                        <field name="qty_remaining_total" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Đơn mua hàng">
                            <field name="purchase_ids" readonly="1">
                                <list>
                                    <field name="name"/>
                                    <field name="state"/>
                                    <field name="date_order"/>
                                    <field name="amount_total"/>
                                </list>
                            </field>
                        </page>
                        <page string="Dòng điều phối">
                            <field name="order_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="source_purchase_line_id"/>
                                    <field name="quantity"/>
                                    <field name="uom_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_import_contract" model="ir.actions.act_window">
        <field name="name">Hợp đồng nhập khẩu</field>
        <field name="res_model">import.contract</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_import_contract_root" name="Hợp đồng nhập khẩu" parent="purchase.menu_purchase_root"
              sequence="18" action="action_import_contract"/>
</odoo>
