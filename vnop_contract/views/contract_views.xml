<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="vnoptic_contract_tree_view" model="ir.ui.view">
        <field name="name">vnoptic.contract.tree</field>
        <field name="model">contract</field>
        <field name="arch" type="xml">
            <list string="Hợp đồng mua hàng">
                <field name="number"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="partner_ref"/>
                <field name="company_id"/>
                <field name="currency_id"/>
                <field name="sign_date"/>

                <field name="type_contract"
                       widget="badge"
                       decoration-info="type_contract == 'domestic'"
                       decoration-primary="type_contract == 'foreign'"/>

                <field name="purchase_order_ids" widget="many2many_tags"/>

                <field name="currency_id" column_invisible="1"/>
                <!--                <field name="amount_total" widget="monetary" sum="Tổng giá trị"/>-->

                <field name="state"
                       widget="badge"
                       decoration-warning="state == 'waiting'"
                       decoration-success="state == 'approved'"
                       decoration-danger="state == 'cancel'"/>
                <field name="delivery_state"
                       widget="badge"
                       decoration-info="delivery_state == 'expected'"
                       decoration-warning="delivery_state == 'confirmed_arrival'"
                       decoration-primary="delivery_state == 'partial'"
                       decoration-success="delivery_state == 'done'"
                       decoration-danger="delivery_state == 'cancel'"/>
            </list>
        </field>
    </record>


    <record id="vnoptic_contract_form_view" model="ir.ui.view">
        <field name="name">vnoptic.contract.form</field>
        <field name="model">contract</field>
        <field name="arch" type="xml">
            <form string="Hợp đồng mua hàng">
                <header>
                    <button name="action_approve"
                            type="object"
                            string="Phê duyệt"
                            class="oe_highlight"
                            invisible="state != 'waiting'"/>

                    <button name="action_submit"
                            type="object"
                            string="Gửi duyệt"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <button name="action_request_revision"
                            type="object"
                            string="Yêu cầu chỉnh sửa"
                            class="btn-secondary"
                            invisible="state != 'approved'"/>

                    <button name="action_allow_revision"
                            type="object"
                            string="Cho phép chỉnh sửa"
                            class="oe_highlight"
                            invisible="state != 'revision_requested'"/>

                    <button name="action_confirm_arrival_auto" type="object" string="Xác nhận hàng về"
                            class="btn-primary"
                            invisible="state != 'approved' or delivery_state != 'expected' or not purchase_order_ids"/>
                    <button name="action_create_otk_session" type="object" string="Tạo OTK lần mới" class="btn-secondary"
                            invisible="state != 'approved'"/>


                    <button name="action_cancel"
                            type="object"
                            string="Hủy hợp đồng"
                            class="btn-secondary"
                            invisible="state == 'cancel'"
                            confirm="Bạn có chắc chắn muốn hủy hợp đồng này không?"/>

                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,waiting,approved,revision_requested,cancel"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_delivery_schedule"
                                type="object"
                                string="Lịch giao hàng"
                                invisible="state != 'approved'"
                                icon="fa-calendar"/>

                        <button name="action_view_product"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-cubes">
                            <field name="product_count" widget="statinfo" string="Sản phẩm"/>
                        </button>

                        <button name="action_view_receipts" type="object" class="oe_stat_button" icon="fa-truck"
                                invisible="delivery_state == 'expected'">
                            <field name="receipt_count_open" widget="statinfo" string="Phiếu nhập kho"/>
                        </button>
                        <button name="action_view_otk_sessions" type="object" class="oe_stat_button" icon="fa-tasks">
                            <field name="otk_session_count" widget="statinfo" string="Lần OTK"/>
                        </button>
                        <button name="action_view_otk" type="object" class="oe_stat_button" icon="fa-check-square-o">
                            <field name="otk_count" widget="statinfo" string="Phiếu chuyển OTK"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Tên hợp đồng..." readonly="state != 'draft'" class="vnop_required_hint"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Thông tin chung">
                            <field name="number" placeholder="Số hợp đồng..." readonly="state != 'draft'"/>
                            <field name="sign_date" readonly="state != 'draft'"/>
                            <field name="company_id" readonly="state != 'draft'"/>
                            <field name="type_contract" readonly="state != 'draft'"/>
                            <field name="currency_id" readonly="state != 'draft'"/>
                            <!--                            <field name="amount_total" widget="monetary" readonly="1"/>-->
                            <!--                            <field name="total_qty" readonly="1"/>-->
                        </group>

                        <group string="Nhà cung cấp">
                            <field name="partner_id" options="{'no_create': True}" readonly="state != 'draft'" class="vnop_required_hint"/>
                            <field name="partner_ref" readonly="1"/>
                            <field name="attachment_ids" widget="many2many_binary" readonly="state != 'draft'"/>
                        </group>
                    </group>

                    <group>
                        <group string="Giao hàng">
                            <field name="incoterm_id" readonly="state != 'draft'"/>
                            <field name="shipment_date" readonly="state != 'draft'" class="vnop_required_hint"/>
                            <field name="delivery_state" readonly="1"/>
                            <field name="port_of_loading" readonly="state != 'draft'"/>
                            <field name="destination" readonly="state != 'draft'"/>
                            <field name="partial_shipment" readonly="state != 'draft'"/>
                            <field name="origin_country_id" readonly="state != 'draft'"/>
                        </group>

                        <group string="Thanh toán / Ngân hàng">
                            <field name="payment_term_id" readonly="state != 'draft'"/>
                            <field name="beneficiary_bank_id" readonly="state != 'draft'"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Đơn mua hàng">
                            <field name="purchase_order_ids" class="vnop_required_hint"
                                   domain="[('partner_id', '=', partner_id),('state', '=', 'purchase')]"
                                   readonly="state in ('approved','revision_requested','cancel')">
                                <list delete="0" create="0">
                                    <field name="name" readonly="1"/>
                                    <field name="date_order" readonly="1" string="Ngày hàng về dự kiến"/>
                                    <field name="state" readonly="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="amount_total" sum="Tổng giá trị" widget="monetary"/>
                                    <button name="action_view_purchase"
                                            type="object"
                                            icon="fa-eye"
                                            title="Xem chi tiết"
                                            class="btn-link"/>
                                </list>
                            </field>
                        </page>
                        <page string="Sản phẩm">
                            <field name="line_ids" readonly="state in ('approved','revision_requested','cancel')">
                                <list editable="bottom" delete="0" create="0">
                                    <field name="purchase_id" readonly="1" force_save="1"/>
                                    <field name="product_id" readonly="1" force_save="1"/>
                                    <field name="product_qty" readonly="1" force_save="1" sum="Tổng SL đặt hàng"/>
                                    <field name="qty_received" readonly="1" force_save="1" sum="Tổng SL đã nhận" decoration-success="qty_received"/>
                                    <field name="qty_contract"
                                           sum="Tổng SL theo hợp đồng"
                                           decoration-warning="qty_contract"/>
                                    <field name="qty_remaining" force_save="1" readonly="1"
                                           decoration-danger="qty_remaining > 0"
                                           sum="Tổng SL còn lại"/>
                                    <field name="otk_qty_checked" readonly="1" sum="OTK thực tế"
                                           column_invisible="parent.otk_session_count == 0"/>
                                    <field name="otk_qty_ok" readonly="1" sum="OTK đạt"
                                           column_invisible="parent.otk_session_count == 0"/>
                                    <field name="otk_qty_ng" readonly="1" sum="OTK lỗi"
                                           column_invisible="parent.otk_session_count == 0"/>
                                    <field name="otk_qty_short" readonly="1" sum="OTK thiếu"
                                           column_invisible="parent.otk_session_count == 0"/>
                                    <field name="otk_qty_excess" readonly="1" sum="OTK thừa"
                                           column_invisible="parent.otk_session_count == 0"/>
                                    <field name="price_unit" force_save="1" readonly="1"/>
                                    <field name="amount_total" widget="monetary" readonly="1" force_save="1"
                                           sum="Tổng giá trị"/>
                                    <field name="currency_id" column_invisible="1"/>
                                    <field name="purchase_line_id" force_save="1" column_invisible="1"/>
                                </list>
                            </field>
                        </page>

                        <page string="Điều khoản">
                            <field name="terms" nolabel="1" widget="html"
                                   placeholder="Nhập điều khoản thương mại, thanh toán..."
                                   readonly="state != 'draft'"/>
                        </page>

                        <page string="Chất lượng / Đóng gói">
                            <group>
                                <field name="quality_requirements" readonly="state != 'draft'"/>
                                <field name="packing" readonly="state != 'draft'"/>
                            </group>
                        </page>

                        <page string="Ghi chú">
                            <field name="note" nolabel="1" widget="html" readonly="state != 'draft'"/>
                        </page>

                        <page string="Thông tin bổ sung">
                            <group>
                                <field name="create_uid" string="Người lập" readonly="1"/>
                                <field name="create_date" string="Ngày tạo" readonly="1"/>
                                <field name="approved_by" widget="many2one_avatar_user" readonly="1"/>
                                <field name="approved_date" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>

                <chatter/>
            </form>
        </field>
    </record>


    <!-- ====== ACTION + MENU (Purchase) ====== -->
    <record id="vnoptic_contract_action" model="ir.actions.act_window">
        <field name="name">Hợp đồng mua hàng</field>
        <field name="res_model">contract</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>


    <menuitem id="vnoptic_contract_menu"
              name="Hợp đồng mua hàng"
              parent="purchase.menu_purchase_root"
              action="vnoptic_contract_action"
              sequence="2"/>

</odoo>
